<Window x:Class="IN0996_UNICAMP.MediaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Player" Height="600" Width="1000"
>
    <Window.CommandBindings>
        <CommandBinding Command="Open" CanExecute="Open_CanExecute" Executed="Open_Executed" />
        <CommandBinding Command="Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="Next" CanExecute="Next_CanExecute" Executed="Next_Executed" />
        <CommandBinding Command="Previous" CanExecute="Previous_CanExecute" Executed="Previous_Executed" />
        <CommandBinding Command="Repeat" CanExecute="Repeat_CanExecute" Executed="Repeat_Executed" />
    </Window.CommandBindings>  
</Window>